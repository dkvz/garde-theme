{{> header lang=htmlWebpackPlugin.options.lang}}
<section class="container-fluid main-section-fluid-first">
  <div class="text-center mb-5">
    <h1 class="page-title page-title-backdrop">{{translate htmlWebpackPlugin.options.lang 'contactUsTitle'}}</h1>
  </div>
<div class="container mb-5">
  <form id="contactForm" action="javascript:void(0);">
    <div class="form-row">
      <div class="form-group col-lg-6 col-sm-12">
        <label for="emailInput">{{translate htmlWebpackPlugin.options.lang 'yourEmailAddress'}}</label>
        <input type="email" class="form-control" name="email" id="emailInput" required aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">{{translate htmlWebpackPlugin.options.lang 'emailPrivacy'}}</small>
      </div>
      <div class="form-group col-lg-6 col-sm-12">
        <label for="nameInput">{{translate htmlWebpackPlugin.options.lang 'yourName'}}</label>
        <input type="text" class="form-control" name="name" id="nameInput" required placeholder="Name">
      </div>
      <div class="form-group col-lg-6 col-sm-12">
        <label for="subjectInput">{{translate htmlWebpackPlugin.options.lang 'subject'}}</label>
        <input type="text" class="form-control" name="subject" id="subjectInput" placeholder="Subject">
      </div>
      <div class="form-group col-lg-6 col-sm-12">
        <label for="categorySelect">{{translate htmlWebpackPlugin.options.lang 'typeOfDemand'}}</label>
        <select class="form-control" name="category" id="categorySelect">
          <option>{{translate htmlWebpackPlugin.options.lang 'demandForMusic'}}</option>
          <option>{{translate htmlWebpackPlugin.options.lang 'orderCd'}}</option>
        </select>
      </div>
      <div class="form-group col-lg-12 col-sm-12">
        <label for="messageInput">Message</label>
        <textarea class="form-control" name="message" id="messageInput" required rows="3"></textarea>
      </div>
      <div class="form-group col-lg-12 col-sm-12">
        <button type="submit" name="submit" id="contactSubmitButton" class="btn btn-primary btn-lg">
          <span id="contactSubmitButtonText">{{translate htmlWebpackPlugin.options.lang 'send'}}</span>
          <span id="contactSpinner" class="d-none">
            <i class="fa fa-spinner fa-spin fa-fw" aria-hidden="true"></i>
          </span>
        </button>
      </div>
    </div>
  </form>

  <div class="mt-4">
    <h1>{{translate htmlWebpackPlugin.options.lang 'contactAddresses'}}</h1>
    <hr />
    <p>{{translate htmlWebpackPlugin.options.lang 'contactUsDirectly'}}</p>
    <p>
      <img src="../../static/email_dvd.png" />
    </p>
    <p>{{translate htmlWebpackPlugin.options.lang 'contactVice'}}</p>
    <h4>Patrick de Neunheuser</h4>
    <p>
      <img src="../../static/email_info.png" />
    </p>
    <code>
      Rue Emile Dury 186a 1410 Waterloo<br />
      TÃ©l.: +32 (0) 2.351.09.17<br />
      Fax: +32 (0) 2.353.08.42
    </code>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">{{translate htmlWebpackPlugin.options.lang 'contactSociety'}}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="{{translate htmlWebpackPlugin.options.lang 'close'}}">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="modalText" class="modal-body">
          Test text
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">{{translate htmlWebpackPlugin.options.lang 'close'}}</button>
        </div>
      </div>
    </div>
  </div>

</div>
</section>
{{> footer lang=htmlWebpackPlugin.options.lang}}